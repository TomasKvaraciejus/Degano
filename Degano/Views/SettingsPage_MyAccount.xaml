<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Degano.Views.SettingsPage_MyAccount"
             Title="My Account">
    <VerticalStackLayout
        Padding="4"
        Spacing="4" >

        <Label
            x:Name="UserName" 
            Text="not signed in"
            FontSize="18"
            FontAttributes="Bold"
            Padding="10"/>

        <Button
            x:Name="SignOutButton"
            Text="Sign Out"
            Clicked="OnSignOutButton" />
        <Button
            x:Name="SignInButton"
            Text="Sign In / Sign up"
            Clicked="OnSignIn" />

    </VerticalStackLayout>
</ContentPage>
