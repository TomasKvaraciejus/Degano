<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Degano.Views.SettingsPage"
             Title="Settings">
    <VerticalStackLayout>
        <Button
            x:Name="AddCardButton"
            Text="Add card"
            Clicked="OnAddCardButton"/>

        <Button
            x:Name="ShowCards"
            Text="Show cards"
            Clicked="OnShowCards"/>

        <CollectionView x:Name="GasStationSelect">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label Text="{Binding Key}" HorizontalOptions="Start"/>
                        <CheckBox IsChecked="{Binding Value}" CheckedChanged="OnGasStationToggle" HorizontalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
