<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Degano.Views.CardPage"
             Title="Manage cards">
    <VerticalStackLayout
        Padding="4"
        Spacing="4" >
        
        <Button
            x:Name="AddCardButton"
            Text="Add/Edit card"
            Clicked="OnAddCard" />

        <Button
            x:Name="Refresh"
            Text="Refresh"
            Clicked="OnRefresh"/>
        
        <TableView x:Name="CardsTable" Intent="Menu">
            <TableRoot>
                <TableSection x:Name="CardsItem" Title="Cards">
                    
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>
