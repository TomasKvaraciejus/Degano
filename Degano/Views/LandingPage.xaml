<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Degano.LandingPage"
             NavigationPage.HasNavigationBar="false">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="SignInBtn"
                Text="Sign in"
                Clicked="OnSignInClick"
                WidthRequest="300"
                HorizontalOptions="Center" />

            <Button
                x:Name="SignUpBtn"
                Text="Sign up"
                Clicked="OnSignUpClick"
                WidthRequest="300"
                HorizontalOptions="Center" />

            <Button
                x:Name="ContinueWithoutSignIn"
                Text="Continue without signing in"
                Clicked="OnContinueWithoutSignInClick"
                WidthRequest="300"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
