<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
        
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingTop="4dp"
        android:background="@drawable/info_window_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="140dp"
            android:minWidth="140dp"
            android:id="@+id/station_name"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:ellipsize="end"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="station_name"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_address"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"
            android:text="station_address"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_price95"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="95: "
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_price98"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Diesel: "
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_priceDiesel"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="98: "
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_priceLPG"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="LPG: "
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_distance"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Distance: "
            android:layout_marginBottom="4dp" />
</LinearLayout>
